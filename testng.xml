<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="ParallelSuite" verbose="2" parallel="methods" thread-count="2">
    <listeners>
        <listener class-name="listeners.TestListener"/>
    </listeners>
    <parameter name="browser" value="chrome"/>
    
    <!-- Original Tests -->
    <test name="OriginalTests">
        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>
        <classes>
            <class name="tests.SearchFlipkart"/>
        </classes>
    </test>
    
    <!-- OrangeHRM Login Tests -->
    <test name="OrangeHRMLoginTests">
        <groups>
            <run>
                <include name="login"/>
                <include name="negative"/>
            </run>
        </groups>
        <classes>
            <class name="tests.OrangeHRMLoginTest"/>
        </classes>
    </test>
</suite> 